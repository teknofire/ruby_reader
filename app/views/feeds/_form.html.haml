= form_for @feed do |f|
  - if @feed.errors.any?
    #error_explanation
      %h2= "#{pluralize(@feed.errors.count, "error")} prohibited this feed from being saved:"
      %ul
        - @feed.errors.full_messages.each do |msg|
          %li= msg
  - unless @feed.new_record?
    .field
      = f.label :title
      = f.text_field :title, class: 'span12'
    .field
      = f.label :url
      = f.text_field :url, class: 'span12'
  .field
    = f.label :feed_url
    = f.text_field :feed_url, class: 'span12'
  
  .form-actions
    = link_to feeds_path, class: 'btn' do
      %i.icon-arrow-left
      Back
      
    .pull-right
      = f.submit 'Save', class: 'btn btn-primary'
